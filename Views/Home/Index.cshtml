@model MeetingInfo
@{
    Layout = "_Layout2";
    ViewBag.Title = "Toplantı Başvuru";
}
@* Home/Index *@

<main class="text-center">

<h1 class="h4">@ViewData["Selamlama"]</h1>
<p>Toplantı katılım durumunuzu bildiriniz.</p>

<div class="card my-2">
    <ul class="list-group list-group-flash">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date tarihinde gerçekleşecek</li>
        <li class="list-group-item">@Model.NumberOfPeople Katılımcı</li>
    </ul>
</div>

<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>

</main>